<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- СТИЛЬ ТЕКСТА -->

    //стиль главных заголовков ("бар")
    <style name="TextHeader" parent="HeaderWidthHeight">
        <item name="android:textColor">@color/header</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    //стиль подзаголовков
    <style name="TextHeaderBody" parent="Wrap">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    //стиль подзаголовков2
    <style name="TextHeaderBody2">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    //стиль обычного текста
    <style name="TextBody" parent="Wrap">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>

    </style>

    //стиль мелкого текста
    <style name="TextBody2" parent="Wrap">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/header</item>
        <item name="android:textStyle">normal</item>

    </style>

    <!-- КАРТИНКИ/ИКОНКИ -->

    //стиль картинок background в списке рестиков и меню
    <style name="ImageBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">135dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    //стиль иконок суммы и времени доставки
    <style name="ImageIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    //стиль иконки времени работы
    <style name="ImageIcon.min">
        <item name="android:layout_width">16dp</item>
    </style>

    <!-- КНОПКИ -->

    //кнопка "Корзина"
    <style name="Basket">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:textColor">@color/my_colorTwo</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    //стиль кнопок картой/наличными
    <style name="RadioButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/radiobutton_selector</item>
        <item name="android:textColor">@color/header</item>
        <item name="android:textSize">16sp</item>

    </style>

    //стиль группы картой/наличными
    <style name="RadioGroup" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/radio_group</item>
    </style>

    //стиль крупных кнопок
    <style name="ButtonCeep" parent="TextBody">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/transparent</item>
    </style>

    //стиль маленьких кнопок
    <style name="ButtonBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!-- ДИАЛОГИ -->

    \\стиль диалогового окна (добавить блюдо)
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
        <item name="android:background">@drawable/okrugl_dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    \\подстиль диалогового окна (добавить блюдо)
    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/translate_left_side</item>
        <item name="android:windowExitAnimation">@anim/translate_right_side</item>
    </style>

    <!-- АКТИВИТИ -->

    \\стиль Активити Опции
    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/CustomOptionAnimation</item>
    </style>

    \\подстиль Активити Опции
    <style name="CustomOptionAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>

    <!-- ШИРИНА/ВЫСОТА ОБЪЕКТОВ -->

    //размеры главного заголовка
    <style name="HeaderWidthHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Match">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>














