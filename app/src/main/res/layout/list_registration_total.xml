<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/name_dish_total"
        style="@style/TextBody"
        android:textSize="14sp"
        android:layout_margin="0dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/number_total"
        android:text="Название блюда"
        />

    <TextView
        android:id="@+id/number_total"
        style="@style/TextBody"
        android:textSize="14sp"
        android:layout_margin="0dp"
        android:layout_toLeftOf="@+id/pieces_total"
        android:layout_marginLeft="10dp"
        android:text="1"
        />

    <TextView
        android:id="@+id/pieces_total"
        style="@style/TextBody"
        android:textSize="14sp"
        android:layout_margin="0dp"
        android:layout_toLeftOf="@+id/cost_total"
        android:text="шт.  "
        />

    <TextView
        android:id="@+id/cost_total"
        style="@style/TextBody"
        android:textSize="14sp"
        android:layout_margin="0dp"
        android:layout_toLeftOf="@id/banknote_total"
        android:text="1"
        />

    <TextView
        android:id="@+id/banknote_total"
        style="@style/TextBody"
        android:textSize="14sp"
        android:layout_margin="0dp"
        android:layout_alignParentRight="true"
        android:text=" р.  "/>

</RelativeLayout>